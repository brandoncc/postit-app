<%= render 'shared/content_title', title: 'Create a new category' %>

<%= render 'shared/form_errors', object: @category %>

<%= form_for @category do |f| %>
  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
